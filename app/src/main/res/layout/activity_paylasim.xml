<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context=".Activityler.PaylasimActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
    <include
        android:id="@+id/toolbar_soru_gonder"
        layout="@layout/app_toolbar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">
    <EditText
        android:inputType="textMultiLine"
        android:maxLength="5000"
        android:textSize="16dp"
        android:id="@+id/post_activity_edit_soru"
        android:background="#FFFFFF"
        android:hint="Sorunuz"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="left|start"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">
    <Spinner
        android:id="@+id/post_activity_spinner_ders"
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:spinnerMode="dialog"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">
    <Spinner
        android:paddingTop="2dp"
        android:id="@+id/post_activity_spinner_konu"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:spinnerMode="dialog"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:textSize="16dp"
            android:padding="10dp"
            android:id="@+id/post_activity_text_odul"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ödül Miktarı"
            android:gravity="center|left"/>
        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/post_activity_puan"
            android:layout_weight="2"
            app:finalNumber="5"
            app:textSize="9dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">
        <TextView
            android:textSize="16dp"
            android:padding="10dp"
            android:id="@+id/post_activity_text_fotograf_sec"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Fotoğraf Seçiniz"
            android:gravity="center|left"/>
        <ImageView
            android:id="@+id/post_activity_image"
            android:padding="5dp"
            android:layout_width="150dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:id="@+id/post_activity_btn_gonder"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/button_stil"
            android:text="Gönder"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

</LinearLayout>