<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    app:contentPadding="2dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/yorum_circle_kullanici_resim"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:src="@drawable/profile"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/yorum__txt_kullanici_isim"
            android:layout_toRightOf="@+id/yorum_circle_kullanici_resim"
            android:text="isim"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/yorum__txt_kullanici_yorum"
            android:layout_toRightOf="@+id/yorum_circle_kullanici_resim"
            android:layout_below="@id/yorum__txt_kullanici_isim"
            android:layout_toEndOf="@id/yorum_circle_kullanici_resim"
            android:text="yorum"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/yorum__txt_tarih"
            android:layout_toRightOf="@+id/yorum_circle_kullanici_resim"
            android:layout_below="@id/yorum__txt_kullanici_yorum"
            android:layout_toEndOf="@id/yorum_circle_kullanici_resim"
            android:text="yorum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>